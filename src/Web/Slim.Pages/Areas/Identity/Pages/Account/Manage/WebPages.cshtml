@page
@model Slim.Pages.Areas.Identity.Pages.Account.Manage.WebPagesModel
@{
    ViewData["Title"] = "CreateWebPages";
    ViewData["ActivePage"] = ManageNavPages.CreateWebPages;
}

<!-- Create a Web Page Type -->
<!-- Tabs-->
<ul class="nav nav-tabs nav-justified" role="tablist">
    <li class="nav-item">
        <a class="nav-link px-0 active" href="#editPage" data-bs-toggle="tab" role="tab">
            <div class="d-none d-lg-block"><i class="bi bi-pen opacity-60 me-2"></i>Edit Type</div>
            <div class="d-lg-none text-center">
                <i class="ci-user opacity-60 d-block fs-xl mb-2"></i><span class="fs-ms">Edit Product Type</span>
            </div>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link px-0" href="#createPage" data-bs-toggle="tab" role="tab">
            <div class="d-none d-lg-block"><i class="ci-bell opacity-60 me-2"></i>Create Type</div>
            <div class="d-lg-none text-center">
                <i class="bi bi-image-alt opacity-60 d-block fs-xl mb-2"></i><span class="fs-ms">
                    Create Product Type
                </span>
            </div>
        </a>
    </li>
</ul>


<div class="tab-content">
    
    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="tab-pane fade show active" id="editPage" role="tabpanel">
        <div class="row gx-4 gy-3">
            <div class="row">
                <div class="col-md-12">
                    <section class="col-lg-12 pt-lg-4 pb-4 mb-3">
                        <div class="pt-2 px-4 ps-lg-0 pe-xl-5">
                          
                            <form method="post" asp-page-handler="EditPages">
                                <div class="d-sm-flex flex-wrap justify-content-between align-items-center pb-2">
                                    <h2 class="h3 py-2 me-2 text-center text-sm-start">Edit Product Type</h2>
                                </div>


                                <div class="mb-3 py-2">
                                    <label asp-for="Input.Id" class="col-form-label-lg">Select Old Type to Edit</label>
                                    <select asp-for="Input.Id" asp-items="Model.RazorPageSelectList"
                                            class="form-select me-2" id="upage-selected"></select>
                                    <span asp-validation-for="Input.Id" class="text-danger"></span>
                                </div>

                                <hr />

                                <div class=" mb-3 py-2">
                                    <label asp-for="Input.PageName" class="col-form-label-lg"></label>
                                    <input asp-for="Input.PageName" class="form-control me-2" id="pageNameEdit" />
                                    <span asp-validation-for="Input.PageName" class="text-danger"></span>
                                </div>

                                <div class="mb-3 py-2">
                                    <label class="form-label" asp-for="Input.Description"></label>
                                    <textarea class="form-control" rows="6"
                                              asp-for="Input.Description" id="pageDescEdit"></textarea>
                                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                                </div>


                                <div class="mb-3 py-2">
                                    <label asp-for="Input.Url" class="col-form-label-lg"></label>
                                    <input asp-for="Input.Url" class="form-control me-2" id="pageUrlEdit" />
                                    <span asp-validation-for="Input.Url" class="text-danger"></span>

                                </div>

                                <div class="mb-3 py-2">
                                    <input type="submit" value="Edit" class="btn btn-primary" />
                                </div>

                            </form>

                        </div>
                    </section>

                </div>
            </div>

        </div>

    </div>
    
    <div class="tab-pane fade" id="createPage" role="tabpanel">
        <div class="row gx-4 gy-3">
            <div class="row">
                <div class="col-md-12">
                    <section class="col-lg-12 pt-lg-4 pb-4 mb-3">
                        <div class="pt-2 px-4 ps-lg-0 pe-xl-5">
                            <!-- Title-->
                            <form method="post" asp-page-handler="CreatePages">
                                <div class="d-sm-flex flex-wrap justify-content-between align-items-center pb-2">
                                    <h2 class="h3 py-2 me-2 text-center text-sm-start">Create Product Type</h2>
                                </div>
                                
                                <div class=" mb-3 py-2">
                                    <label asp-for="Input.PageName" class="col-form-label-lg"></label>
                                    <input asp-for="Input.PageName" class="form-control me-2"  />
                                    <span asp-validation-for="Input.PageName" class="text-danger"></span>
                                </div>

                                <div class="mb-3 py-2">
                                    <label class="form-label" asp-for="Input.Description"></label>
                                    <textarea class="form-control" rows="6" asp-for="Input.Description" ></textarea>
                                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                                </div>


                                <div class="mb-3 py-2">
                                    <label asp-for="Input.Url" class="col-form-label-lg"></label>
                                    <input asp-for="Input.Url" class="form-control me-2"  />
                                    <span asp-validation-for="Input.Url" class="text-danger"></span>

                                </div>

                                <div class="mb-3 py-2">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>

                            </form>

                        </div>
                    </section>

                </div>
            </div>

        </div>
    </div>

</div>

<!-- Create Category -->

                    
                    
@section Scripts{
    <script>
        $(document).ready(function () {
            var url = '@Url.Page("WebPages", "PageSelected")';
            $('#upage-selected').change(function () {
                debugger;
                var selected = $(this).children("option:selected");
                var values = selected.val();

                GetSelectedWebPageDetails(url, values);

                
            });
        });
    </script>
}